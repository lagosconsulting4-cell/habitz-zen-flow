{
  "installCommand": "cd Landing && npm install && cd ../App && npm install",
  "buildCommand": "cd Landing && npm run build && cd ../App && npm run build && cd .. && node scripts/prepare-dist.cjs",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/direct",
      "destination": "/direct/index.html"
    },
    {
      "source": "/direct/:path*",
      "destination": "/direct/:path*"
    },
    {
      "source": "/tdah/obrigado",
      "destination": "/tdah/obrigado.html"
    },
    {
      "source": "/app/:path((?!.*\\.).*)",
      "destination": "/app/index.html"
    },
    {
      "source": "/:path((?!app|tdah|tiktok|assets|audio|favicon|direct|antigo).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/app/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }]
    },
    {
      "source": "/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }]
    },
    {
      "source": "/(.*).mp4",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(.*).mp3",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}
